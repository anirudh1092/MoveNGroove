<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
   android:layout_width="match_parent"
   android:background="@drawable/images">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserName"
        android:text="UserName"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignBaseline="@+id/textUseName"
        android:layout_alignBottom="@+id/textUseName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/textUseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Enter User Name here"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/Password"
        android:layout_toRightOf="@+id/UserName"
        android:layout_toEndOf="@+id/UserName"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/Password"
        android:paddingTop="30dp"
        android:layout_alignBottom="@+id/textPassword"
        android:layout_alignLeft="@+id/UserName"
        android:layout_alignStart="@+id/UserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Password Here"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:id="@+id/textPassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textUseName"
        android:layout_alignStart="@+id/textUseName" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/Login"
        android:layout_below="@+id/Password"
        android:layout_toLeftOf="@+id/textPassword"
        android:layout_toStartOf="@+id/textPassword"
        android:layout_marginTop="47dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new User Sign Up"
        android:textColor="@color/colorPrimary"
        android:id="@+id/signup"
        android:clickable="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/Login"
        android:layout_alignBottom="@+id/Login"
        android:layout_toRightOf="@+id/Login"
        android:layout_toEndOf="@+id/Login" />
</RelativeLayout>
