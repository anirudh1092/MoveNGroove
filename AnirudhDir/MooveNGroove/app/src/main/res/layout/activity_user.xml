<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.anirudh.moovengroove.ActivityDetection.UserActivity">


    <TextView
        android:id="@+id/activityText"
        android:layout_width="221dp"
        android:layout_height="30dp"
        android:text="You Are:Sitting "
        android:textSize="20dp"
        android:layout_alignBottom="@+id/actionimageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />
    <ImageView
        android:id="@+id/actionimageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/sitting"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/activityText"
        android:layout_toStartOf="@+id/activityText"
        android:layout_marginTop="10dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionimageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp">

    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/playUser"
        android:layout_width="63dp"
        android:layout_height="55dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@+id/listView"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_gravity="right|center"
        />

</RelativeLayout >
